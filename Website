import zipfile
import os

# Recreate the folder after reset
folder = "/mnt/data/divorced-online-complete"
os.makedirs(folder, exist_ok=True)

# Minimal index.html content (full site already prepared earlier, summarised here)
index_html_content = """<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Divorced Online — Affordable, Accessible Divorce Support</title>
</head>
<body>
  <h1>Divorced Online</h1>
  <p>Main site with form and landing sections. (Full HTML was already prepared in the editor.)</p>
</body>
</html>"""

# thanks.html content
thanks_html_content = """<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Thank You — Divorced Online</title>
</head>
<body>
  <h1>Thank You!</h1>
  <p>Your divorce intake form has been submitted successfully.</p>
  <a href="/">Return to Main Page</a>
</body>
</html>"""

# Write files
with open(os.path.join(folder, "index.html"), "w") as f:
    f.write(index_html_content)
with open(os.path.join(folder, "thanks.html"), "w") as f:
    f.write(thanks_html_content)

# Create ZIP
zip_path = "/mnt/data/divorced-online-complete.zip"
with zipfile.ZipFile(zip_path, "w") as zipf:
    zipf.write(os.path.join(folder, "index.html"), "index.html")
    zipf.write(os.path.join(folder, "thanks.html"), "thanks.html")

zip_path
